{
  "manifest_version": 2,
  "name": "highlightr.io",
  "description": "Highlight and Share",
  "version": "1.0",
  "icons": {
    "128": "/assets/cursor_128.png",
    "48": "/assets/cursor_48.png",
    "16": "/assets/cursor_16.png"
  },
  "permissions": [
    "http://*/",
    "https://*/",
    "activeTab"
  ],
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["jquery.js", "payload.js"],
    "matches": ["<all_urls>"]
  }],

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
     "default_icon": "icon.png"
  }
}
